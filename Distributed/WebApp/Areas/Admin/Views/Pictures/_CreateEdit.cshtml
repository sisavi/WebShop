@model WebApp.Areas.Admin.ViewModels.PictureCreateEditViewModel
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Picture.ProductId" class="control-label"></label>
    <select asp-for="Picture.ProductId" class="form-control" asp-items="Model.ProductSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Picture.Name" class="control-label"></label>
    <input asp-for="Picture.Name" class="form-control" />
    <span asp-validation-for="Picture.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Picture.ImageFail" class="control-label"></label>
    <input asp-for="Picture.ImageFail" accept="image/png"/>
    <span asp-validation-for="Picture.ImageFail" class="text-danger"></span>
</div>

