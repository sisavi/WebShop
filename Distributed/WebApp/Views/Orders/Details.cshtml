@model WebApp.ViewModels.BasketViewModel
@{
    ViewData["Title"] = "Details";
}
<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3"></h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.Products!)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">@Html.DisplayFor(modelItem => item.Product!.ProductName)</h6>
                    </div>
                    <span class="text-muted">@Html.DisplayFor(modelItem => item.Product.ProductPrice) €</span>
                </li>
            }
            <li class="list-group-item d-flex justify-content-between">
                
                <strong>@Model.SubTotal €</strong>
            </li>
        </ul>
    </div>

    <div class="col-md-8 order-md-1">
        
        

        <form asp-action="MakeOrder" asp-route-orderId="@Model.Order!.Id">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Order!.DeliveryTypeId" class="control-label"></label>
                    <select asp-for="Order!.DeliveryTypeId" class="form-control" asp-items="Model.DeliveryTypeSelectList"></select>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Order!.Address" class="control-label"></label>
                    <input asp-for="Order!.Address" class="form-control" />
                    <span asp-validation-for="Order!.Address" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="Order!.PhoneNumber" class="control-label"></label>
                    <input asp-for="Order!.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Order!.PhoneNumber" class="text-danger"></span>
                </div>
          
                <input type="submit" class="btn btn-primary btn-lg btn-block" />
          
            </div>
        </form>
    </div>
</div>


