@model WebApp.ViewModels.ProductCreateEditViewModel
<div asp-validation-summary="All" class="text-danger"></div>
<div class="form-group">
    <label asp-for="Product.CategoryId" class="control-label"></label>
    <select asp-for="Product.CategoryId" class="form-control" asp-items="Model.CategoryNameSelectList"></select>
</div>
<div class="form-group">
    <label asp-for="Product.ProductName" class="control-label"></label>
    <input asp-for="Product.ProductName" class="form-control" />
    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Product.ProductCode" class="control-label"></label>
    <input asp-for="Product.ProductCode" class="form-control" />
    <span asp-validation-for="Product.ProductCode" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Product.Description" class="control-label"></label>
    <input asp-for="Product.Description" class="form-control" />
    <span asp-validation-for="Product.Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ProductPrice" class="control-label"></label>
    <input type="number" asp-for="ProductPrice" class="form-control" />
    <span asp-validation-for="ProductPrice" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CampaignId" class="control-label"></label>
    <select asp-for="CampaignId" class="form-control" asp-items="Model.CampaignNameSelectList">
        <option value="">---default---</option>
    </select>
    </div>



            